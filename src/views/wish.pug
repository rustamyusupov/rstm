extends blocks/page

block content
  main.main
    form.wish(action="" method="post")
      input.form-control.wish__field.wish__name(
        type="text"
        name="name"
        id="name"
        value= item.name
        placeholder="Description"
        required
      )
      input.form-control.wish__field.wish__link(
        type="url"
        name="link"
        id="link"
        value= item.link
        placeholder="Link"
        required
      )
      input.form-control.wish__field.wish__price(
        type="number"
        name="price"
        id="price"
        min="0"
        value= item.price
        placeholder="Price"
        required
      )
      select.form-control.wish__field.wish__currency(name="currency" id="currency" required)
        each currency in currencies
          option(value=currency.id selected= currency.id === item.currencyId)= currency.name
      select.form-control.wish__field.wish__category(name="category" id="category" required)
        each category in categories
          option(value=category.id selected= category.id === item.categoryId)= category.name
      label.wish__archive
        input.form-control.wish__archive-field(
          type="checkbox"
          name="archive"
          id="archive"
          checked= item.archive
        )
        | Archive
      div.wish__action
        button.button.button--outlined(type="submit")
          | Save
        button.button.button--error(type="button")
          | Delete
