extends blocks/page

block head
  script(defer type="module" src="/scripts/wishes.js")

block content
  main.main
    each category in categories
      section.wishes
        h4.wishes__title= category.name
        ul
          each wish in category.wishes 
            li.wishes__item(class= wish.statuses.map(s => `wishes__item--${s}`).join(" "))
              button.wishes__cog(type="button")
                img.wishes__icon(src="icons/settings.svg" width="16" height="16" alt="Icon Settings")
              a.wishes__link(href=wish.link target="_blank" rel="nofollow noopener")= wish.name
              |  â€“ 
              span= wish.price
