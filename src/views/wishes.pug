extends blocks/page
include blocks/iconLink
include blocks/link

block content
  main.main
    div.wishes__header
      h1.wishes__title Wishlist
      +iconLink('/wishes/add', 'add.svg', width=24, height=24, "Settings")(class="wishes__add")
    each category in categories
      section.wishes
        h4.wishes__category-title= category.name
        ul
          each wish in category.wishes 
            li.wishes__item
              +iconLink('/wishes/' + wish.id, 'settings.svg', "Settings")(class="wishes__cog")
              +link(wish.link, wish.name)
              |  â€“ 
              span= wish.price
