{
  "name": "rstm",
  "version": "1.0.0",
  "description": "Personal stuff about me",
  "license": "MIT",
  "private": true,
  "author": "Rustam Yuspov",
  "scripts": {
    "prebuild": "rm -Rf dist/ .parcel-cache",
    "dev:server": "nodemon --exec babel-node src/server.js",
    "dev:client": "parcel --target client",
    "dev": "concurrently npm:dev:*",
    "build:server": "parcel build --target server --no-cache && cp src/db.json dist",
    "build:client": "parcel build --target client --no-cache",
    "build": "concurrently npm:build:*",
    "start": "node dist/server.js",
    "deploy": "git push heroku master",
    "lint": "eslint ."
  },
  "targets": {
    "client": {
      "source": [
        "./src/index.html",
        "./src/wishes.html"
      ],
      "publicUrl": "./",
      "distDir": "dist",
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      },
      "sourceMap": false
    },
    "server": {
      "source": "./src/server.js",
      "distDir": "dist",
      "engines": {
        "node": ">= 17"
      },
      "sourceMap": false
    }
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "express": "^4.17.2",
    "json-server": "^0.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "nodemon": "^2.0.15",
    "parcel": "^2.1.1"
  }
}
