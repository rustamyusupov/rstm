{
  "name": "rstm",
  "version": "1.0.0",
  "description": "Personal stuff about me",
  "license": "MIT",
  "private": true,
  "author": "Rustam Yuspov",
  "scripts": {
    "prebuild": "rm -Rf dist/",
    "start:client": "parcel ./src/*.html",
    "start:server": "nodemon --exec babel-node src/server.js",
    "build": "parcel build --target server && parcel build --target client",
    "lint": "eslint ."
  },
  "targets": {
    "client": {
      "source": [
        "src/index.html",
        "src/wishes.html"
      ],
      "distDir": "./dist",
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      },
      "sourceMap": false,
      "includeNodeModules": true
    },
    "server": {
      "source": "src/server.js",
      "distDir": "./dist",
      "engines": {
        "node": ">= 17"
      },
      "sourceMap": false,
      "includeNodeModules": true
    }
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "eslint": "^8.6.0",
    "nodemon": "^2.0.15",
    "parcel": "^2.1.1"
  }
}
