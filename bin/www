#!/usr/bin/env node

const http = require('http');
const schedule = require('node-schedule');

const app = require('../src');
const { everyDay } = require('../src/utils/constants');
const updatePrices = require('../src/utils/updatePrices');

const port = process.env.PORT || '3000';
const server = http.createServer(app);

app.set('port', port);
server.listen(port);
schedule.scheduleJob(everyDay, updatePrices);
