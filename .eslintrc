{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", { "code": 100, "ignoreUrls": true }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
